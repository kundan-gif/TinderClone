<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TinderPlus">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_20"
        android:elevation="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/firstRelative"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/firstLinear"
                android:background="#FCCA06"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/get_tinder_plus"
                    android:textColor="@color/white"
                    android:fontFamily="@font/varela_round"
                    android:drawableStart="@drawable/crosswhite"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/dp_20"
                    android:textSize="30sp"
                    android:drawablePadding="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reload_svgrepo_com"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/unlimited_rewinds"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:fontFamily="@font/varela_round"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/go_back_and_swipe_again"
                    android:textColor="@color/white"
                    android:fontFamily="@font/varela_round"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/relativeTwo"
                android:layout_below="@+id/firstLinear"
                android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="match_parent"
                   android:src="@drawable/monthimg"
                   android:scaleType="fitXY"
                   android:layout_height="180dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/relativeTwo"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:text="@string/continue_1"
                    android:id="@+id/btnContinue"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/dp_20"
                    android:padding="@dimen/dp_20"
                    android:textSize="18sp"
                    android:fontFamily="@font/varela_round"
                    android:background="@drawable/rect_round_tinder_theme"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>